{
  "$schema": "https://biomejs.dev/schemas/1.5.0/schema.json",
  "extends": [],
  "files": { "ignoreUnknown": true },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [".next", "node_modules", "./components/ui"],
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 80
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingComma": "all",
      "semicolons": "always",
      "arrowParentheses": "asNeeded"
    }
  },
  "json": {
    "parser": { "allowComments": true },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 80
    }
  },
  "linter": {
    "ignore": [".next", "node_modules", "./components/ui"],
    "rules": {
      "all": true,
      "style": {
        "noDefaultExport": "off"
      },
      "complexity": {
        "useSimplifiedLogicExpression": "off"
      },
      "suspicious": {
        "noConsoleLog": "off"
      },
      "nursery": {
        "noEmptyBlockStatements": "off"
      }
    }
  }
}